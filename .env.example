# LLM API Key (required — shared key for all providers via LiteLLM/OpenRouter)
LLM_API_KEY=sk-...
LLM_BASE_URL=https://your-litellm-or-openrouter-endpoint/v1

# Provider-specific keys (optional — override LLM_API_KEY for direct connections)
# ANTHROPIC_API_KEY=sk-ant-...
# OPENAI_API_KEY=sk-...
# GOOGLE_API_KEY=...

# Auth
RESEARCH_API_KEYS=key1,key2       # comma-separated allowed keys
RESEARCH_ADMIN_KEY=admin-secret   # admin API key

# Server
PORT=8000

# Default Models
DEFAULT_WRITER_MODEL=claude-opus-4-5-20251101
DEFAULT_REVIEWER_MODEL=claude-sonnet-4-20250514

# Workflow Settings
MAX_REVIEW_ROUNDS=3
SCORE_THRESHOLD=8.0
